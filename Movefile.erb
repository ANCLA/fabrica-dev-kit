local:
  vhost: "<%= homepage %>"
  wordpress_path: '<%= "#{__DIR__}/#{sync_folder}/" %>' # use an absolute path here

  database:
    name: "wordpress"
    user: "wordpress"
    password: "wordpress"
    host: "<%= hostname %>"

production:
  vhost: "<%= homepage %>"
  wordpress_path: "server path" # use an absolute path here

  database:
    name: "server db name"
    user: "server db user"
    password: "server db password"
    host: "server db host"
    # port: "3308" # Use just in case you have exotic server config

  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

