# Wordmove configuration

# Development site settings - do not modify
local:
  vhost: "localhost:<%%= ENV['WEB_PORT'] %>"
  wordpress_path: '<%%= File.expand_path "#{Dir.pwd}/../www/" %>'

  database:
    name: "wordpress"
    user: "wordpress"
    password: "wordpress"
    host: "127.0.0.1"
    port: "<%%= ENV['DB_PORT'] %>"

