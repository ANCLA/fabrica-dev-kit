# Wordmove configuration

# Development site settings - do not modify
local:
  vhost: "localhost:<%%= ENV['WEB_PORT'] %>"
  wordpress_path: '<%%= File.expand_path "#{Dir.pwd}/../www/" %>'

  database:
    name: "wordpress"
    user: "wordpress"
    password: "wordpress"
    host: "127.0.0.1"
    port: "<%%= ENV['DB_PORT'] %>"

# Production site settings - modify for your project
production:
  vhost: "<%= url %>" # production URL
<% if defined?(remote_path) %>
  wordpress_path: "<%= remote_path %>"
<% else %>
  wordpress_path: "server path" # remote path to WordPress (relative to FTP or SSH login)
<% end %>

  database: # remote database credentials â€“ only needed if you plan to pull/push the whole database
    name: "name"
    user: "user"
    password: "pass"
    host: "url"
    # port: "3308" # optional (for exotic configs)

  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

<% if defined?(ftp) %>
  ftp:
    host: "<%= ftp['host'] %>"
    user: "<%= ftp['user'] %>"
    password: "<%= ftp['password'] %>"
    passive: <%= if ftp.has_key?('passive') then ftp['passive'] else true end %>
<% else %>
  # ftp:
  #   user: "user"
  #   password: "password"
  #   host: "host"
  #   passive: true
<% end %>

<% if defined?(ssh) %>
  ssh:
    host: "<%= ssh['host'] %>"
    user: "<%= ssh['user'] %>"
  <% if not ssh['password'].nil? %>
    password: "<%= ssh['password'] %>"
  <% end %>
  <% if not ssh['port'].nil? %>
    port: <%= ssh['port'] %>
  <% end %>
  <% if not ssh['rsync_options'].nil? %>
    rsync_options: "<%= ssh['rsync_options'] %>"
  <% end %>
  <% if not ssh['gateway'].nil? %>
    gateway:
      host: "<%= ssh['gateway']['host'] %>"
      user: "<%= ssh['gateway']['user'] %>"
      <% if not ssh['gateway']['password'].nil? %>
      password: "<%= ssh['gateway']['password'] %>"
    <% end %>
  <% end %>
<% else %>
  # ssh:
  #   host: "host"
  #   user: "user"
  #   password: "password" # password is optional, will use public keys if available.
  #   port: 22 # Port is optional
  #   rsync_options: "--verbose" # Additional rsync options, optional
  #   gateway: # Gateway is optional
  #     host: "host"
  #     user: "user"
  #     password: "password" # password is optional, will use public keys if available.
<% end %>
