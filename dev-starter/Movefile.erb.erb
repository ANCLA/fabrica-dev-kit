local:
  vhost: "localhost:<%= web__dev_port %>"
  # path to WordPress installation from FTP/SSH root folder
  wordpress_path: '<%%= "#{Dir.pwd}/www/" %>'

  database:
    name: "wordpress"
    user: "wordpress"
    password: "wordpress"
    host: "localhost:<%= web__dev_port %>"

production:
  vhost: "<%= url %>"
<% if defined?(remote_path) %>
  wordpress_path: "<%= remote_path %>"
<% else %>
  wordpress_path: "server path" # use an absolute path here
<% end %>

  database:
    name: "server db name"
    user: "server db user"
    password: "server db password"
    host: "server db host"
    # port: "3308" # Use just in case you have exotic server config

  exclude:
    - ".git/"
    - ".gitignore"
    - ".sass-cache/"
    - "bin/"
    - "tmp/*"
    - "Gemfile*"
    - "Movefile"
    - "wp-config.php"
    - "wp-content/*.sql"

<% if defined?(ftp) %>
  ftp:
    host: "<%= ftp['host'] %>"
    user: "<%= ftp['user'] %>"
    password: "<%= ftp['password'] %>"
    passive: <%= if ftp.has_key?('passive') then ftp['passive'] else true end %>
<% else %>
  # ftp:
  #   user: "user"
  #   password: "password"
  #   host: "host"
  #   passive: true
<% end %>

<% if defined?(ssh) %>
  ssh:
    host: "<%= ssh['host'] %>"
    user: "<%= ssh['user'] %>"
  <% if not ssh['password'].nil? %>
    password: "<%= ssh['password'] %>"
  <% end %>
  <% if not ssh['port'].nil? %>
    port: <%= ssh['port'] %>
  <% end %>
  <% if not ssh['rsync_options'].nil? %>
    rsync_options: "<%= ssh['rsync_options'] %>"
  <% end %>
  <% if not ssh['gateway'].nil? %>
    gateway:
      host: "<%= ssh['gateway']['host'] %>"
      user: "<%= ssh['gateway']['user'] %>"
      <% if not ssh['gateway']['password'].nil? %>
      password: "<%= ssh['gateway']['password'] %>"
    <% end %>
  <% end %>
<% else %>
  # ssh:
  #   host: "host"
  #   user: "user"
  #   password: "password" # password is optional, will use public keys if available.
  #   port: 22 # Port is optional
  #   rsync_options: "--verbose" # Additional rsync options, optional
  #   gateway: # Gateway is optional
  #     host: "host"
  #     user: "user"
  #     password: "password" # password is optional, will use public keys if available.
<% end %>
