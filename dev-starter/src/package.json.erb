{
  "name": "<%= slug %>",
  "version": "0.1.0",
  "description": "<%= title %>",
  "author": {
    "name": "<%= author['name'] %>"<%= author['email'] || author['url'] ? ",\n" : "\n" %>
<% if not author['email'].nil? %>
    "email": "<%= author['email'] %>"<%= author['url'] ? ",\n" : "\n" %>
<% end %>
<% if not author['url'].nil? %>
    "url": "<%= author['url'] %>"
<% end %>
  },
  "private": true,
  "dependencies": {
    "jquery": "^2.2.0",
    "normalize.css": "^3.0.3"
  }
}
